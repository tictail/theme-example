<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{store_name}}</title>
    <link href="{{cdn_url}}/main.css" rel="stylesheet">
  </head>
  <body>
    <h1>Welcome to {{store_name}}</h1>
    <p>{{store_description}}</p>

    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/products">All Products</a></li>
      {{#navigation}}
      <li>
        <a href="{{url}}">{{label}} ({{count}})</a>
        <ul>
        {{#children}}
          <li><a href="{{url}}">{{label}} ({{count}})</a></li>
        {{/children}}
        </ul>
      </li>
      {{/navigation}}
    </ul>

    {{>list_page}}

    {{>product_page}}

    <script src="{{cdn_url}}/main.js"></script>
  </body>
</html>
